<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <ImageView
        android:id="@+id/iv_icon_settingsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_right"
        app:tint="@color/black"
        />

    <TextView
        android:id="@+id/tv_value_settingsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Celcius"
        android:layout_marginEnd="@dimen/dimen_2x"
        app:layout_constraintEnd_toStartOf="@id/iv_icon_settingsLayout"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_label_settingsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/label_temperature"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        />


</androidx.constraintlayout.widget.ConstraintLayout>