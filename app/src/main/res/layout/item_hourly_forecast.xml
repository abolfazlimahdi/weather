<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dimen_4x"
    tools:context=".adapters.HourlyForecastAdapter"
    >

    <TextView
        android:id="@+id/tv_hour_hourlyForecastItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textAppearance="@style/TextAppearance.Caption"
        android:text="10 AM"
        />

    <ImageView
        android:id="@+id/iv_weatherImage_hourlyForecastItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_hour_hourlyForecastItem"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_favorites"
        android:layout_marginTop="@dimen/dimen_2x"
        />

    <TextView
        android:id="@+id/tv_temperature_hourlyForecastItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_2x"
        app:layout_constraintTop_toBottomOf="@id/iv_weatherImage_hourlyForecastItem"
        app:layout_constraintStart_toStartOf="parent"
        android:textAppearance="@style/TextAppearance.Body2"
        android:text="10 AM"
        />


</androidx.constraintlayout.widget.ConstraintLayout>